<% comment_array = @picture.comments.reverse %>
<% comment_array.each do |m| %>
<% if m.message !=nil%>
	<div class="comment_content">
		<div class="comment_text"><%= m.message %><br></div>
	    
	    <div class="comment_info"><% if m.user != nil%>
		  <li id="user">by: <span class="user_name"><%= m.user.first_name %> <%= m.user.last_name %></span></li>
	 	  <li id="date"><%= m.created_at.strftime("%b %e, %l:%M %p") %></li>
	    <%end%>
	    </div>
	</div>
<%end%>
<%end%>