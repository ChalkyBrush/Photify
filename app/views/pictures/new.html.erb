<div id = "add_picture">

<h2>Add a picture</h2>
<p><%= link_to "Back to Pictures", pictures_url %></p>

<% if current_user%>
<%= form_for @picture do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label "artist" %><br>
    <%= f.text_field "artist" %>
  </p>
  <p>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </p>
  <p>
    <%= f.label "url" %><br>
    <%= f.text_field "url" %>
  </p>
  <p>
    <%= f.label "category" %><br>
    <%= f.select :category, ['People', 'Places', 'Nature', 'Space', 'Architecture', 'Design', 'Illustration', 'Food', 'Sports', 'Miscellaneous'].sort %>
    </select>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>
</div>
<% else %>
<h1>You do not have permission to access this page</h1>
<%end%>