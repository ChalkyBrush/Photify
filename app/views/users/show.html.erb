<div id="large_profile_pic_div"><%= image_tag(current_user.profile_picture, :class => "large_profile_picture") %></div>

<p id="profile_name"><%= current_user.first_name %> <%= current_user.last_name %> </p>
<p id="profile_email"><%= current_user.email %> </p></br>

<% if current_user.id == @user.id %>
